{
  "name": "esx-bot",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Taso <taso@projecterror.dev>",
  "license": "MIT",
  "devDependencies": {
    "@types/common-tags": "^1.8.0",
    "@types/long-timeout": "^0.1.0",
    "@types/node": "^14.14.20",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "node-gyp": "^7.1.2",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --config .prettierrc ./src/**/*.ts  --write",
    "lint": "eslint ./src --ext .ts ",
    "dev": "nodemon ./src/index.ts",
    "dev:debug": "nodemon --inspect ./src/index.ts"
  },
  "dependencies": {
    "common-tags": "^1.8.0",
    "dayjs": "^1.10.2",
    "discord-akairo": "github:1Computer1/discord-akairo",
    "discord.js": "^12.5.1",
    "dotenv": "^8.2.0",
    "escape-string-regexp": "^4.0.0",
    "long-timeout": "^0.1.1",
    "pg": "^8.5.1",
    "sqlite3": "^5.0.1",
    "systeminformation": "^4.34.5",
    "tslog": "^3.0.5",
    "typeorm": "^0.2.29"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "ext": "ts",
    "env": {
      "NODE_ENV": "development"
    },
    "execMap": {
      "ts": "node --require ts-node/register"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{ts,json,md}": [
      "prettier --write",
      "yarn lint",
      "git add"
    ]
  }
}
